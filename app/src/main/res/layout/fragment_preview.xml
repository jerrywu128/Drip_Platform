<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"

        >


    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/gray"
        />
    <TextView
        android:id="@+id/patient_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/green"
        android:textSize="20dp"

        android:gravity="center"
        android:textColor="@color/w"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:textSize="20dp"
            android:text="Please"
            android:gravity="center"
            android:textColor="@color/w"
            />

        <TextView
            android:id="@+id/Numericalvalue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:text="wait...."
            android:textColor="@color/w"
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/Distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="距離: (開發中)"
        android:gravity="center"
        android:textColor="@color/w"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">

        <TextView
            android:id="@+id/Status"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="狀態: 正常"
            android:textColor="@color/w"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Critical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textColor="@color/w"
            android:gravity="center"
            android:text=" 警戒值：none"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/change_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="設定"
            android:textSize="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.drip_platform.ExtendComponent.Electrocardiogram
            android:id="@+id/electrocardiogram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        </com.example.drip_platform.ExtendComponent.Electrocardiogram>

        <include
            android:id="@+id/google_map_view"
            layout="@layout/activity_google_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></include>


    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>