<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/Drawer"
android:layout_width="match_parent"
android:layout_height="match_parent">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:src="@drawable/cross"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#80DEEA"
        android:gravity="center"
        android:text="@string/homepage_title"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="80dp"
     />

    <EditText
              android:id="@+id/account_number"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
              android:drawableRight="@drawable/ic_person_black_24dp"
              android:drawablePadding="16dp"
              android:backgroundTint="@color/w"
              android:hint="Account"
              android:inputType="textVisiblePassword"
              android:textColor="@color/w"
              android:textColorHint="@color/w"
              android:textSize="16dp" />




    <EditText
        android:id="@+id/Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:drawablePadding="16dp"
        android:backgroundTint="@color/w"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/w"
        android:textColorHint="@color/w"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />



    <Button
        android:id="@+id/log_in"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorlight"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="@string/Login"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/lightgray"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="@string/Sign_up"
        />



</LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/NaList"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_header"
    app:menu="@menu/menu_main"
    />



</androidx.drawerlayout.widget.DrawerLayout>